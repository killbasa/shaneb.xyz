{
	"name": "website",
	"version": "0.0.1",
	"author": "killbasa <contact@shaneb.xyz>",
	"license": "MIT",
	"type": "module",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/killbasa/website.git"
	},
	"homepage": "https://github.com/killbasa/website",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"check": "pnpm sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"ci": "pnpm check && pnpm lint && pnpm build"
	},
	"devDependencies": {
		"@killbasa/eslint-config": "^3.0.0",
		"@sveltejs/adapter-cloudflare": "^4.7.2",
		"@sveltejs/kit": "^2.6.1",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"eslint": "^9.13.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"svelte": "^5.1.3",
		"svelte-check": "^4.0.4",
		"typescript": "^5.6.2",
		"vite": "^5.4.8"
	},
	"resolutions": {
		"@rollup/rollup-freebsd-arm64": "4.24.0"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix"
		],
		"*.{js,ts,json,html}": [
			"prettier --write --log-level=warn \"**/*.{js,ts,json,html}\""
		]
	},
	"packageManager": "pnpm@9.12.2",
	"volta": {
		"node": "22.10.0",
		"pnpm": "9.12.2"
	},
	"engines": {
		"node": ">=22.x"
	}
}
