{
	"name": "portfolio-website",
	"version": "0.0.1",
	"author": "killbasa <contact@shaneb.xyz>",
	"license": "MIT",
	"type": "module",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/killbasa/website.git"
	},
	"homepage": "https://github.com/killbasa/website",
	"engines": {
		"node": "20.x"
	},
	"scripts": {
		"update": "yarn upgrade-interactive",
		"dd": "yarn dedupe --strategy highest",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "prettier --check . && eslint src --ext ts,svelte",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"ci": "yarn check && yarn lint && yarn build"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.4.3",
		"@commitlint/config-conventional": "^18.4.3",
		"@sveltejs/adapter-cloudflare": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.1",
		"@typescript-eslint/eslint-plugin": "^6.14.0",
		"@typescript-eslint/parser": "^6.14.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.0.1",
		"eslint-plugin-svelte": "^2.35.1",
		"husky": "^8.0.3",
		"lint-staged": "^15.2.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"svelte-eslint-parser": "^0.33.1",
		"typescript": "^5.3.3",
		"vite": "^5.0.10"
	},
	"lint-staged": {
		"*.{mjs,cjs,js,ts}": [
			"eslint --fix --ext js,ts",
			"prettier --write --loglevel=warn \"**/*.{mjs,cjs,js,ts}\""
		],
		"*.{svelte}": [
			"eslint --fix --ext svelte",
			"prettier --write --loglevel=warn \"**/*.svelte\""
		],
		"*.{json,yml,yaml,md}": [
			"prettier --write --loglevel=warn \"**/*.{json,yml,yaml,md}\""
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"packageManager": "yarn@4.0.2"
}
