{
	"name": "website",
	"version": "0.0.1",
	"author": "killbasa <contact@shaneb.xyz>",
	"license": "MIT",
	"type": "module",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/killbasa/website.git"
	},
	"homepage": "https://github.com/killbasa/website",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"check": "pnpm sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"ci": "pnpm check && pnpm lint && pnpm build"
	},
	"devDependencies": {
		"@killbasa/eslint-config": "^3.0.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.15.2",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"eslint": "^9.18.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.3.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"svelte": "^5.17.3",
		"svelte-check": "^4.1.3",
		"typescript": "5.7.3",
		"vite": "^6.0.7"
	},
	"resolutions": {
		"@rollup/rollup-freebsd-arm64": "4.24.0"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix"
		],
		"*.{js,ts,json,html}": [
			"prettier --write --log-level=warn \"**/*.{js,ts,json,html}\""
		]
	},
	"engines": {
		"node": "22.x"
	},
	"packageManager": "pnpm@9.15.3",
	"volta": {
		"node": "22.13.0",
		"npm": "11.0.0",
		"pnpm": "9.15.3"
	}
}
